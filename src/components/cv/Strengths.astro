---
// import { experience } from "../../cv.config";
import type { StrengthItem, Strengths } from "../../lib/cv.types";
import SectionHeader from "./SectionHeader.astro";
import StrengthList from "./StrengthList.astro";

export type Props = {
  strengths: Strengths;
};

const { strengths } = Astro.props;
---

<div
  class="relative mb-8 flex flex-col gap-3 text-theme-dark theme-transition dark:text-theme-light"
>
  <SectionHeader title={strengths.sectionTitle} />
  {
    Array.isArray(strengths.strengths[0]) ? (
      <div class="grid grid-cols-1 gap-8 md:grid-cols-2">
        {(strengths.strengths as StrengthItem[][]).map(
          (strengthArray: StrengthItem[]) => (
            <StrengthList strengths={strengthArray} />
          )
        )}
      </div>
    ) : (
      <StrengthList strengths={strengths.strengths as StrengthItem[]} />
    )
  }
</div>
