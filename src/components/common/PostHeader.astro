---
import Tags from "../tags/Tags.astro";
import Anchor from "./Anchor.astro";
import PostDate from "./PostDate.astro";
import PostLinks from "./PostLinks.astro";

type Link = {
  label: string;
  url: string;
};

export type Props = {
  title: string;
  publishDate?: Date;
  updateDate?: Date;
  tags?: string[];
  links?: Link[]
};

const { title, publishDate, updateDate, tags, links } = Astro.props;
---

<div data-pagefind-body class="mt-8 mb-16 flex flex-col gap-0">
  <h1
    class="font-display text-3xl leading-normal sm:text-4xl sm:leading-normal"
  >
    {title}
  </h1>
  <div
    class="flex flex-col gap-1 text-theme-dark-muted dark:text-theme-light-muted"
  >
    <div
      class="flex flex-row text-theme-dark-muted dark:text-theme-light-muted"
    >
      <PostDate published={publishDate} updated={updateDate} />
    </div>
    <Tags tags={tags} />
    <PostLinks 
      links={links} 
      additionalClasses="md:hover-accent"
    />
  </div>
</div>
