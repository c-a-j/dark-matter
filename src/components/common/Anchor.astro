---
export type Props = {
  url: string;
  additionalClasses?: string;
  external?: boolean;
  "aria-label"?: string;
};

const { url, external, additionalClasses } =
  Astro.props;
const anchorClasses = [
  "inline-flex flex-row items-center font-medium anchor",
  additionalClasses,
];
---

<a
  href={url}
  class:list={anchorClasses}
  target={external ? "_blank" : "_self"}
  aria-label={Astro.props["aria-label"]}
>
  <span>
    <slot />
  </span>
  {external && (
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="inline-block h-6 w-6 shrink-0"
      viewBox="0 0 512 512"
    >
      <path
        fill-rule="evenodd"
        d="M362.666 149.333V320H320l-.001-97.831l-154.51 154.51l-30.169-30.17L289.829 192h-97.83v-42.666z"
      />
    </svg>
  )}
</a>
