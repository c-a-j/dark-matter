---
import { getUrl } from "../../lib/utils";
type Props = {
  title: string;
  subtitle: string;
  image?: string;
};
const { title, subtitle, image } = Astro.props;
---

<div class="my-8 mb-15 flex items-center justify-center gap-10">
  {image && <img src={getUrl(image)} alt="Profile image" class="hero-image" />}
  <div class="flex flex-col items-center">
    <h1 class="pb-2 font-display text-6xl sm:text-5xl">
      {title}
    </h1>
    <span>
      {subtitle}
    </span>
  </div>
</div>
